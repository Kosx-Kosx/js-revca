makeCOFFEE = coffee
COFFEE_FLAGS = -m -b

all: scripts/minified.js

#scripts/minified.js: scripts/bundle.js
#	closure scripts/bundle.js --compilation_level SIMPLE_OPTIMIZATIONS > scripts/minified.js
scripts/minified.js: scripts/bundle.js
	uglifyjs scripts/bundle.js > scripts/minified.js

scripts/bundle.js: $(ALL_OUTPUTS)
	browserify scripts/application.js -o scripts/bundle.js


test:
	mocha tests/test*.coffee --compilers coffee:coffee-script

compile: everything

clean:
	rm $(ALL_OUTPUTS)

publish: test all
	git checkout master
	sh deploy.sh

.PHONY: clean test all everything publish
